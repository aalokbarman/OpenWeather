<?xml version="1.0" ?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Toptal_OpenWeather::weather" title="weather" sortOrder="10">
                    <resource id="Toptal_OpenWeather::weather_save" title="Save weather" sortOrder="10"/>
                    <resource id="Toptal_OpenWeather::weather_delete" title="Delete weather" sortOrder="20"/>
                    <resource id="Toptal_OpenWeather::weather_update" title="Update weather" sortOrder="30"/>
                    <resource id="Toptal_OpenWeather::weather_view" title="View weather" sortOrder="40"/>
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Toptal_OpenWeather::config_toptal_openweather" title="openweather"/>
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
